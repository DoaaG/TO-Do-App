<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/leaf_print_light_green</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/leaf_print_light_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="noActionBar" parent="Theme.ToDoApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="savechanges_button_style" parent="Theme.ToDoApplication" >
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="cornerRadius">350dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">9dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="floatbar" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/leaf_print_light_green</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="textview" parent="Theme.ToDoApplication">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="setting_selection_box" parent="Theme.ToDoApplication">
        <item name="android:gravity">start|center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:strokeColor">@color/light_blue</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>
    <style name="weekDayStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="dateTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="calendarHeaderStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">18sp</item>
    </style>

</resources>